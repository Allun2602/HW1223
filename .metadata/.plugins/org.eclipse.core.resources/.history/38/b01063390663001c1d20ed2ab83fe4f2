import java.io.BufferedReader;

public class Sample5_9 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		if(arg.length!=1) {
			System.out.println("請指定正確的檔案名稱");
			System.exit(1);
		}
		
		try {
			BufferedReader br =
					new BufferedReader(new FlieReader("test3.txt"));
			String str;
			while((srt = br.readLine())!=null) {
				System.out.println(str);
			}
			br.close();
		}
		
		catch(IOException e) {
			System.out.println("輸出入有誤");
		}

	}

}
